extends default

block main
  section#page1
    .overlay
    .content
      .container.clearfix
        .row
          .col-md-7
            h1 Open Mentoring
            h4
              | Mobile Learning Platform
            p
              | Powers the <strong>Weekume</strong> Digital Security Education Platform
            ul.list-unstyled.summary
              li
                i.fa.fa-check
                a(onclick='$(".main").moveTo(3)') Learn on the go with <b>short</b> lessons
              li
                i.fa.fa-check
                a(onclick='$(".main").moveTo(3)') Download lessons for <b>offline</b> viewing
              li
                i.fa.fa-check
                a(onclick='$(".main").moveTo(3)') Keep learning with <b>smart recommendations</b>
              li
                i.fa.fa-check
                a(onclick='$(".main").moveTo(3)') Stay <b>up to date</b> with digital threats
            .row.text-center
              .col-md-4.col-md-offset-4
                a(href="https://f-droid.org/app/org.iilab.openmentoring")
                  img.img-responsive(src="images/get-it-on.png")
            .row.center-block
              .col-md-4.col-md-offset-4
                span#github-btn.github-btn.github-stargazers
                  a#gh-btn.gh-btn(href='https://github.com/iilab/openmentoring-mobile/', target='_blank', aria-label='View on GitHub')
                    span.gh-ico(aria-hidden='true')
                    span#gh-text.gh-text View code on Github

                hr
            .row.text-center
              .col-md-6.col-md-offset-3
                  p Free and Open Source Software developped jointly by
            .row
              .col-md-3.col-md-offset-3.col-xs-6(style="margin-top: -50px;")
                img(src="images/iilab-logo.svg" class="img-responsive" style="min-height: 180px;")
              .col-md-3.col-xs-6(style="margin-top: -50px;")
                img(src="images/dwa-logo.svg" class="img-responsive" style="min-height: 180px;")
 
          .device.device-android.text-center.col-md-5
            .device-holder.android-holder.offset-top
              .device-holder-inner
                #home-slideshow.owl-carousel.owl-theme
                  .item
                    img.img-responsive(src='images/devices/screenshots/android-screen-1.1.jpg', alt='')
                  .item
                    img.img-responsive(src='images/devices/screenshots/android-screen-1.2.jpg', alt='')
                  .item
                    img.img-responsive(src='images/devices/screenshots/android-screen-1.3.jpg', alt='')
    a.icon.faa-float.animated(onclick='$(".main").moveTo(2)')
      i.fa.fa-angle-double-down
  each section,index in children
    if (index!=0 && index!=2)
      section(id='page'+(index+2))
        .overlay-page(id='overlay-page'+(index+2))
        a.icon.faa-float.up.animated(onclick='$(".main").moveTo(' + (index + 1) + ')')
          i.fa.fa-angle-double-up
        .content
          .container.clearfix
            .row
              .col-md-6
                != section
              if (images && images[index])
                .col-md-5.col-md-offset-1
                  p
                    img.img-responsive.img-circle(src='images/'+images[index], alt='')
        a.icon.faa-float.animated(onclick='$(".main").moveTo(' + (index + 3) + ')')
          i.fa.fa-angle-double-down
    else
      section(id='page'+(index+2))
        .overlay-page(id='overlay-page'+(index+2))
        a.icon.faa-float.up.animated(onclick='$(".main").moveTo(' + (index + 1) + ')')
          i.fa.fa-angle-double-up
        .content
          .container.clearfix
            .row.services
              .col-md-12
                != section
        a.icon.faa-float.animated(onclick='$(".main").moveTo(' + (index + 3) + ')')
          i.fa.fa-angle-double-down
      
